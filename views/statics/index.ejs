<% include ../partials/header %>
<% include ../partials/navbar-title %>



<!-- show this if user is NOT logged in -->
<% if (req.session.id === null || req.session.id === undefined) { %>
<div>
<p>New to this site? Sign up for an account.</p>
<div class="spacey"><a href="/signup"><button>Sign Up</button></a></div>
<p>Already have an account?</p>	
<div class="spacey"><a href="/login"><button>Login</button></a></div>
</div>
<% } %>


<!-- show this if user IS logged in -->
<% if (req.session.id !== null && req.session.id !== undefined) { %>
<div class="spacey"><a href="/users/<%=req.session.id%>/apiAuthStart"><button>go to buttons!!! </button></a></div>

<p>All done?</p>
<a href="/logout"><button class="button logout">Logout</button></a>

<% } %>






<% include ../partials/footer %>