<% include ../partials/header %>
<% include ../partials/navbar-title %>

<h1>Sign up page</h1>

<form action="/signup" method="POST">
	<ul>
		<li><label for="userEmail">What is your first name? </label></li>
		<li><input type="text" id="userFirstName" name="userFirstName" placeholder="Enter first name" class="textField" autofocus></li>


		<li><label for="userPass">What is your last name? </label></li>
		<li><input type="text" id="userLastName" name="userLastName" placeholder="Enter last name" class="textField"></li>


		<li><label for="userEmail">What email would you like to use to sign in with this application? </label></li>
		<li><input type="email" id="userEmail" name="userEmail" placeholder="Enter email" class="textField"></li>


		<li><label for="userPass">Please choose a password: </label></li>
		<li><input type="password" id="userPass" name="userPass" placeholder="Enter password" class="textField" minlength="8"></li>
	</ul>
	<input type="submit" value="Create Account" class="button">

</form>

<p>Already have an account? <a href="/login"><button class="button">Login</button></a></p>
<p>Forgot password? <a href="/passwordreset"><button class="button">Reset password</button></a></p>

<p><a href="/index"><button class="button">HOME</button></a></p>

